{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schema/scene-control.schema.json",
  "title": "SceneControl",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "arousal": { "type": "number", "minimum": 0, "maximum": 1 },
    "valence": { "type": "number", "minimum": -1, "maximum": 1 },
    "twist": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "axis": { "type": "string", "enum": ["primaryDiagonal", "secondaryDiagonal", "y"] },
        "magnitude": { "type": "number", "minimum": 0, "maximum": 1 },
        "durationMs": { "type": "integer", "minimum": 250, "maximum": 60000 }
      },
      "required": ["axis", "magnitude", "durationMs"]
    },
    "shards": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "density": { "type": "number", "minimum": 0, "maximum": 1 },
        "halfLifeMs": { "type": "integer", "minimum": 200, "maximum": 20000 }
      },
      "required": ["density", "halfLifeMs"]
    },
    "palette": { "type": "string", "enum": ["nocturne", "prismatic", "infra"] }
  },
  "required": ["arousal", "valence", "twist", "shards", "palette"]
}
