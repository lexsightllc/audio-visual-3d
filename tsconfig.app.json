{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "./services/*": ["./src/services/*"]
    },
    "types": ["vite/client", "node", "@types/webrtc", "@types/web"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "moduleResolution": "node16",
    "module": "esnext",
    "target": "esnext"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
